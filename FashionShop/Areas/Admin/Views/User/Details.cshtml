@model AppUserModel

@{
    ViewData["title"] = "Thông tin User";
}

<h4>Thông tin User</h4>
<div class="col-sm-12">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <tr scope="row"><h4><b> Id User : </b> @Model.Id</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>UserName : </b> @Model.UserName</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b> Họ tên : </b> @Model.NameAccount</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Email : </b> @Model.Email</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Số điện thoại : </b> @Model.PhoneNumber</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Địa chỉ : </b> @Model.Address</h4></tr>
    </div>
    <div class="col-sm-12" style="margin-bottom: 15px">
        <div class="shop-menu pull-left">
            <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@Model.Id">Xóa</a>
        </div>
        <div class="shop-menu pull-right">
            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@Model.Id">Chỉnh sửa</a>
            <a class="btn btn-warning btn-sm" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}