@model UserModel;

@{
    ViewData["title"] = "Thêm User";
}
<h4>Thêm Users</h4>
<div class="col-sm-12">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <lable>Họ tên</lable>
            <input asp-for="NameAccount" class="form-control" />
            <span asp-validation-for="NameAccount" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Email</lable>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Số điện thoại</lable>
            <input asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Địa chỉ</lable>
            <input asp-for="Address" class="form-control"/>
            <span asp-validation-for="Address" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Tên đăng nhập</lable>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Mật khẩu</lable>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group">
            <lable>Xác nhận mật khẩu</lable>
            <input type="password" asp-for="RePassword" class="form-control"/>
            <span asp-validation-for="RePassword" class="text-danger" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Thêm</button>
        </div>
    </form>
    <div class="col-sm-12">
        <div class="shop-menu pull-right">
            <a class="btn btn-warning btn-sm" asp-action="Index">Hủy</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}