@model DanhMucModel

@{
    ViewData["title"] = "Thông tin danh mục";
}

<h4>Thông tin danh mục</h4>
<div class="col-sm-12">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <tr scope="row"><h4><b> Id danh mục : </b> @Model.Id</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Tên danh mục : </b> @Model.Name</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Mô tả : </b> @Model.Description</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Status : </b> @Model.Status</h4></tr>
    </div>
    <div class="col-sm-12" style="margin-bottom: 15px">
        <div class="shop-menu pull-left">
            <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="DanhMuc" asp-route-Id="@Model.Id">Xóa</a>
        </div>
        <div class="shop-menu pull-right">
            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="DanhMuc" asp-route-Id="@Model.Id">Chỉnh sửa</a>
            <a class="btn btn-warning btn-sm" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}