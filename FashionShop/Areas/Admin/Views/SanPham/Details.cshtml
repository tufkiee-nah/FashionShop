@model SanPhamModel

@{
    ViewData["title"] = "Thông tin sản phẩm";
}

<h4>Thông tin sản phẩm</h4>
<div class="col-sm-12">
    <!--multipart/form-data -> thêm hình ảnh-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!--Slug tạo tự động-->
    <div class="form-group">
        <tr scope="row"><h4><b> Id sản phẩm : </b> @Model.Id</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Tên sản phẩm : </b> @Model.Name</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Mô tả : </b> @Model.Description</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Giá : </b> @Model.Price</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Danh mục : </b> @Model.DanhMuc.Name</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Thương hiệu : </b> @Model.ThuongHieu.Name</h4></tr>
    </div>
    <div class="form-group">
        <tr scope="row"><h4><b>Ảnh : </b></h4></tr>
        <img src="~/images/SanPhams/@Model.Image" width="100px" />
    </div>
    <div class="col-sm-12" style="margin-bottom: 15px">
        <div class="shop-menu pull-left">
            <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="SanPham" asp-route-Id="@Model.Id">Xóa</a>
        </div>
        <div class="shop-menu pull-right">
            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="SanPham" asp-route-Id="@Model.Id">Chỉnh sửa</a>
            <a class="btn btn-warning btn-sm" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}