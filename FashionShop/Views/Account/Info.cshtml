@model AppUserModel

@{
	ViewData["Title"] = "Thông tin tài khoản";
}

<div class="category-tab">
	<!--category-tab-->
	<div class="col-sm-12">
		<ul class="nav nav-tabs">
			<li class="active"><a asp-action="Info">Thông tin tài khoản</a></>
            <li><a asp-action="Order">Đơn hàng của tôi</a></li>
		</ul>
	</div>
	<div class="tab-content">
		<div class="tab-pane fade active in">
			<div class="col-sm-12">
				<div>
                    <p class="title-info">
                        <b>Họ tên : </b>
                    </p>
                    <input class="info" disabled type="text" name="nameaccount" value="@Model.NameAccount" />
                </div>
                <div>
                    <p class="title-info">
                        <b>Email : </b>
                    </p>
					<input class="info" disabled type="text" name="email" value="@Model.Email" />
                </div>
                <div>
                    <p class="title-info">
                        <b>Số điện thoại : </b>
                    </p>
					<input class="info" disabled type="text" name="sdt" value="@Model.PhoneNumber" />
                </div>
                <div>
                    <p class="title-info">
                        <b>Địa chỉ : </b>
                    </p>
                    <input class="info" disabled type="text" name="address" value="@Model.Address" />
                </div>
                <div>
                    <p class="title-info">
                        <b>Tên đăng nhập : </b>
                    </p>
                    <input class="info" disabled type="text" name="username" value="@Model.UserName" />
                    <div class="col-sm-12" style="margin-bottom: 15px">
                <div class="shop-menu pull-left">
                    <a class="btn btn-warning btn-sm" asp-action="EditInfo">Chỉnh sửa</a>
                    <a class="btn btn-warning btn-sm" asp-action="EditPassword">Đổi mật khẩu</a>
                </div>
                <div class="shop-menu pull-right">
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Account" asp-route-Id="@Model.Id">Yêu cầu xóa tài khoản</a>
                </div>
            </div>
		</div>
	</div>
</div><!--/category-tab-->