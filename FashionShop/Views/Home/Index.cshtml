@model PaginatedList<FashionShop.Models.SanPhamModel>;

@{
	ViewData["Title"] = "Trang chủ";
}

<section id="slider">
	<!--slider-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div id="slider-carousel" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
						<li data-target="#slider-carousel" data-slide-to="1"></li>
						<li data-target="#slider-carousel" data-slide-to="2"></li>
					</ol>

					<div class="carousel-inner">
						<div class="item active">
							<div class="col-sm-6">
								<h1><span>Fashion shop</span></h1>
								<h2>Mẫu áo thun thịnh hành nhất 2024</h2>
								<p> Áo Thun Tay Lỡ Unisex SAIGONESE, chất liệu là Cotton 99% dày dặn, thấm hút mồ hôi tốt, thiết kế hình thêu chắc chắn, tinh tế, thẩm mỹ cao.</p>
								<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="GioHang" asp-route-Id="1"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng ngay</a>
							</div>
							<div class="col-sm-6">
								<a asp-action="Details" asp-controller="SanPham" asp-route-Id="1">
									<img src="images/SanPhams/1.jpg" class="girl img-responsive" width="400px" height="400px" alt="" />
								</a>
							</div>
						</div>

						<div class="item">
							<div class="col-sm-6">
								<h1><span>Fashion shop</span></h1>
								<h2>Mẫu quần thun thịnh hành nhất 2024</h2>
								<p>
									Quần xuông cạp trơn đen , quần ống rộng trơn uzzlang. Chất liệu Cotton thoáng mát, form rộng freesize.
								</p>
								<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="GioHang" asp-route-Id="2"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng ngay</a>
							</div>
							<div class="col-sm-6">
								<a asp-action="Details" asp-controller="SanPham" asp-route-Id="2">
									<img src="images/SanPhams/2.jpg" class="girl img-responsive" width="400px" height="400px" alt="" />
								</a>
							</div>
						</div>

						<div class="item">
							<div class="col-sm-6">
								<h1><span>Fashion shop</span></h1>
								<h2>Mẫu áo sơ mi thịnh hành nhất 2024</h2>
								<p> Áo sơ mi hè form rộng màu xanh dương dài tay dành cho nữ chất liệu cao cấp phong cách Hàn đi học đi làm đi chơi. </p>
								<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="GioHang" asp-route-Id="4"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng ngay</a>
							</div>
							<div class="col-sm-6">
								<a asp-action="Details" asp-controller="SanPham" asp-route-Id="4">
									<img src="images/SanPhams/4.jpg" class="girl img-responsive" width="400px" height="400px" alt="" />
								</a>
							</div>
						</div>

					</div>

					<a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
						<i class="fa fa-angle-left"></i>
					</a>
					<a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
						<i class="fa fa-angle-right"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</section><!--/slider-->

<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>

<div class="col-sm-9 padding-right">
    <!--features_items-->
    <div class="features_items">
		<div>
			<div class="col-sm-12">
                <h2 class="title text-center">Sản phẩm dành cho bạn</h2>
			</div>
			<div class="col-sm-12">
				<a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]"><i class="btn btn-success fa fa-unsorted">Sắp xếp theo giá</i></a>
			</div>
		</div>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
                    <div class="single-products">
						<div class="productinfo text-center">
	                        <a asp-action="Details" asp-controller="SanPham" asp-route-Id="@item.Id">
							<img src="/images/SanPhams/@item.Image" alt="" width="100px" height="250px" alt="@item.Name" />
								<h2>@item.Price.ToString("#,##.000 VND") </h2>
								<p>@item.Name</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="GioHang" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
							</div>
                    </div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-heart-o"></i>Thêm vào yêu thích</a></li>
						</ul>
					</div>
				</div>
			</div>
		}
		<div class="col-sm-9 Pagination">
			@{
				var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
				var nextDisabled = !Model.HasNextPage ? "disabled" : "";
			}

			<a asp-action="Index"
			   asp-route-sortOrder="@ViewData["CurrentSort"]"
			   asp-route-pageNumber="@(Model.PageIndex - 1)"
			   asp-route-currentFilter="@ViewData["CurrentFilter"]"
			   class="btn btn-default @prevDisabled">
				Previous
			</a>
			<a asp-action="Index"
			   asp-route-sortOrder="@ViewData["CurrentSort"]"
			   asp-route-pageNumber="@(Model.PageIndex + 1)"
			   asp-route-currentFilter="@ViewData["CurrentFilter"]"
			   class="btn btn-default @nextDisabled">
				Next
			</a>
		</div>
	</div>
	<!--features_items-->
</div>